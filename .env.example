# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Database Configuration
DATABASE_URL=your_database_url_here

# Matching Engine Configuration
# Generate a secure random string for protecting cron endpoints
CRON_SECRET=your_secure_random_string_here

# Email Configuration
# Resend API key for sending digest emails
RESEND_API_KEY=your_resend_api_key_here

# Email sending control (set to 'false' to disable email sending)
EMAIL_SENDING_ENABLED=true

# OpenAI Configuration
# Your OpenAI API key for AI-powered features
OPENAI_API_KEY=your_openai_api_key_here

# AI feature control (set to 'false' to disable AI features)
AI_FEATURES_ENABLED=true

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Stripe Product Price IDs (replace with actual price IDs from Stripe Dashboard)
STRIPE_STARTER_PRICE_ID=price_1234567890abcdef
STRIPE_PROFESSIONAL_PRICE_ID=price_abcdef1234567890
STRIPE_ENTERPRISE_PRICE_ID=price_fedcba0987654321